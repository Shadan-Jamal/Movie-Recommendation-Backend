{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "paths": {
            "@/*": ["src/*"],
            "@config/*": ["src/config/*"],
            "@routes/*": ["src/routes/*"],
            "@services/*": ["src/services/*"]
        }
    },
    "include": ["src/**/*"],
}